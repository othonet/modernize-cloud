<div class="w-full max-w-2xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between mb-4">
            <div>
                <h1 class="text-3xl font-bold text-white">{{title}}</h1>
                <p class="text-gray-400 mt-2">{{#if editingUser}}Edite as informações do usuário{{else}}Preencha os dados para criar um novo usuário{{/if}}</p>
            </div>
            <div class="flex space-x-2">
                <a href="/admin" class="btn-secondary flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                    </svg>
                    Painel
                </a>
                <a href="/admin/users" class="btn-secondary flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Usuários
                </a>
            </div>
        </div>
    </div>

    <!-- Form -->
    <div class="bg-gray-800 rounded-lg border border-gray-700 p-6">
        <form id="userForm" class="space-y-6">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-300 mb-2">Nome</label>
                <input type="text" id="name" name="name" value="{{#if editingUser}}{{editingUser.name}}{{/if}}" 
                       class="input w-full" placeholder="Nome completo">
            </div>

            <div>
                <label for="username" class="block text-sm font-medium text-gray-300 mb-2">Usuário <span class="text-red-400">*</span></label>
                <input type="text" id="username" name="username" value="{{#if editingUser}}{{editingUser.username}}{{/if}}" required
                       class="input w-full" placeholder="nomeusuario" autocomplete="username">
                <p class="text-xs text-gray-500 mt-1">Usado para fazer login no sistema</p>
            </div>

            <div>
                <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email <span class="text-gray-500 text-xs">(opcional)</span></label>
                <input type="email" id="email" name="email" value="{{#if editingUser}}{{editingUser.email}}{{/if}}"
                       class="input w-full" placeholder="usuario@exemplo.com" autocomplete="email">
                <p class="text-xs text-gray-500 mt-1">Opcional - usado apenas para referência</p>
            </div>

            <div>
                <label for="password" class="block text-sm font-medium text-gray-300 mb-2">
                    Senha <span class="text-red-400">*</span>
                    {{#if editingUser}}<span class="text-gray-500 text-xs">(deixe em branco para não alterar)</span>{{/if}}
                </label>
                <input type="password" id="password" name="password" {{#unless editingUser}}required{{/unless}}
                       class="input w-full" placeholder="••••••••">
            </div>

            <div>
                <label class="flex items-center space-x-3 cursor-pointer">
                    <input type="checkbox" id="isAdmin" name="isAdmin" {{#if editingUser.isAdmin}}checked{{/if}}
                           class="w-5 h-5 text-blue-600 bg-gray-700 border-gray-600 rounded focus:ring-blue-500 focus:ring-2">
                    <span class="text-sm font-medium text-gray-300">Administrador</span>
                </label>
                <p class="text-xs text-gray-500 mt-1 ml-8">Usuários administradores podem gerenciar outros usuários</p>
            </div>

            <div id="errorMessage" class="hidden bg-red-900/50 border border-red-700 rounded-lg p-3 text-sm text-red-200"></div>
            <div id="successMessage" class="hidden bg-green-900/50 border border-green-700 rounded-lg p-3 text-sm text-green-200"></div>

            <div class="flex space-x-3">
                <button type="submit" class="btn-primary flex-1">
                    {{#if editingUser}}Atualizar Usuário{{else}}Criar Usuário{{/if}}
                </button>
                <a href="/admin/users" class="btn-secondary">
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

<script>
document.getElementById('userForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target);
    const data = Object.fromEntries(formData);
    
    const errorDiv = document.getElementById('errorMessage');
    const successDiv = document.getElementById('successMessage');
    errorDiv.classList.add('hidden');
    successDiv.classList.add('hidden');
    
    // Validações básicas
    if (!data.username || data.username.trim() === '') {
        errorDiv.textContent = 'O nome de usuário é obrigatório';
        errorDiv.classList.remove('hidden');
        return;
    }
    
    // Validar formato de username (sem espaços, caracteres especiais limitados)
    const usernameRegex = /^[a-zA-Z0-9_-]+$/;
    if (!usernameRegex.test(data.username.trim())) {
        errorDiv.textContent = 'O username deve conter apenas letras, números, underscore (_) ou hífen (-)';
        errorDiv.classList.remove('hidden');
        return;
    }
    
    // Validar formato de email apenas se fornecido
    if (data.email && data.email.trim() !== '') {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(data.email)) {
            errorDiv.textContent = 'Email inválido';
            errorDiv.classList.remove('hidden');
            return;
        }
    }
    
    {{#unless editingUser}}
    if (!data.password || data.password.trim() === '') {
        errorDiv.textContent = 'A senha é obrigatória';
        errorDiv.classList.remove('hidden');
        return;
    }
    
    if (data.password.length < 6) {
        errorDiv.textContent = 'A senha deve ter pelo menos 6 caracteres';
        errorDiv.classList.remove('hidden');
        return;
    }
    {{/unless}}
    
    try {
        const url = {{#if editingUser}}`/admin/users/{{editingUser.id}}`{{else}}'/admin/users'{{/if}};
        const method = {{#if editingUser}}'PUT'{{else}}'POST'{{/if}};
        
        // Mostrar loading
        const submitBtn = e.target.querySelector('button[type="submit"]');
        const originalText = submitBtn.textContent;
        submitBtn.disabled = true;
        submitBtn.textContent = 'Salvando...';
        
        const response = await fetch(url, {
            method: method,
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (result.success) {
            successDiv.textContent = {{#if editingUser}}'Usuário atualizado com sucesso!'{{else}}'Usuário criado com sucesso!'{{/if}};
            successDiv.classList.remove('hidden');
            showSuccess({{#if editingUser}}'Usuário atualizado com sucesso!'{{else}}'Usuário criado com sucesso!'{{/if}});
            
            setTimeout(() => {
                window.location.href = '/admin/users';
            }, 1000);
        } else {
            errorDiv.textContent = result.error || 'Erro ao salvar usuário';
            errorDiv.classList.remove('hidden');
            submitBtn.disabled = false;
            submitBtn.textContent = originalText;
        }
    } catch (error) {
        errorDiv.textContent = 'Erro ao conectar com o servidor';
        errorDiv.classList.remove('hidden');
        const submitBtn = e.target.querySelector('button[type="submit"]');
        submitBtn.disabled = false;
        submitBtn.textContent = {{#if editingUser}}'Atualizar Usuário'{{else}}'Criar Usuário'{{/if}};
    }
});
</script>

